<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!-- tag::view[] -->
<view   xmlns="http://jmix.io/schema/flowui/view"
        xmlns:webdav="http://jmix.io/schema/webdav/ui"
        title="msg://attachmentsDetailView.title"
        focusComponent="form">
    <!-- end::view[] -->
    <data>
        <instance id="attachmentDc"
                  class="com.company.dfs.entity.Attachment">
            <fetchPlan>
                <property name="description"/>
                <property name="webdavDocument" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="attachmentDc">
            <textField id="descriptionField"
                       property="description"
                       colspan="2"/>
            <!-- tag::webdavDocumentUpload[] -->
            <webdav:webdavDocumentUpload id="webdavDocumentField"
                                         property="webdavDocument"
                                         colspan="2"/>
            <!-- end::webdavDocumentUpload[] -->
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>